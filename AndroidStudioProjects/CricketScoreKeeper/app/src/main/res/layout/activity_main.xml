<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:background="@android:color/darker_gray"
    android:orientation="vertical"
    tools:context="com.example.android.cricketscorekeeper.MainActivity">>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:layout_weight = "2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/teamA_label_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="Team A"
                android:textColor="@color/colorOfText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_A_inning1_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="4dp"
                android:text="1st Inning"
                android:textAllCaps="false"
                android:textColor="@color/colorOfInning"
                android:background="@color/colorOfButton"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_A_inning1_score_text_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/colorOfText"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/team_A_inning2_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:padding="4dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="2nd Inning"
                android:textAllCaps="false"
                android:textColor="@color/colorOfInning"
                android:background="@color/colorOfButton"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/team_A_inning2_score_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/colorOfText"
                android:textSize="30sp" />

            <Button
                android:id="@+id/sixerA_button_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/colorOfButton"
                android:onClick="addSixerForTeamA"
                android:text="Sixer"
                android:textAllCaps="true"
                android:textColor="@color/colorOfText"
                android:textSize="14sp" />

            <Button
                android:id="@+id/fourA_button_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widthofbutton"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/colorOfButton"
                android:onClick="addFourForTeamA"
                android:text="Four"
                android:textColor="@color/colorOfText"
                android:textSize="14sp" />

            <Button
                android:id="@+id/runs2A_button_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widthofbutton"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/colorOfButton"
                android:onClick="addtwoForTeamA"
                android:text="+2 Runs"
                android:textAllCaps="true"
                android:textColor="@color/colorOfText"
                android:textSize="14sp" />

            <Button
